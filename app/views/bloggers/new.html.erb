<h1> Fill in the form to sign up as a blogger</h1>


<% if flash[:errors].any? %>
  <% flash[:errors].each do |msg| %>
  <li><%= msg %></li>
  <% end %>
<% end %>

<%= form_for @blogger do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<br>

<%= f.label :age %>
<%= f.number_field :age %>

<br>

<%= f.label :bio %>
<%= f.text_area :bio %>

<br>

<%= f.submit %>

<% end %>
